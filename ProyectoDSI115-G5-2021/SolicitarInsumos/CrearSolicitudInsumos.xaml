<Window x:Class="ProyectoDSI115_G5_2021.SolicitarInsumos.CrearSolicitudInsumos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021.SolicitarInsumos"
        mc:Ignorable="d"
        Title="CrearSolicitudInsumos" Height="577.5" Width="1212.15">
    <Grid Margin="0,0,2,-3" >

        <Rectangle  Fill="#FFC91029" Stroke="Black" Margin="0,-6,0,490" />

        <Label  Content="Solicitar Insumos" HorizontalAlignment="Left" Margin="37,10,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Comic Sans MS" FontWeight="Bold" Foreground="White"/>
        <Label  Content="Insumos en inventario" HorizontalAlignment="Left" Margin="130,72,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FF0E0E0E"/>
        <Label  Content="Agregar a la Solicitud" Margin="0,60,190,0" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Foreground="#FF0E0E0E" HorizontalAlignment="Right" Width="220"/>
        <Rectangle Margin="587,110,13,78" Stroke="Black"/>


        <Button  x:Name="btnBuscar" Content="Buscar" Margin="351,124,0,0"  Background="#FFC91029" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFF7F7F7" HorizontalAlignment="Left" Width="88" Height="29" VerticalAlignment="Top" Click="BtnBuscar_Click" RenderTransformOrigin="0.324,0.5"/>
        <Button  x:Name="btnAgregar" Content="Agregar" Margin="0,148,27,0"  Background="#FFC91029" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFF7F7F7" HorizontalAlignment="Right" Width="88" Height="28" VerticalAlignment="Top"  RenderTransformOrigin="0.324,0.5" Click="BtnAgregar_Click"/>
        <TextBox x:Name="txtBuscar"  Text="" Margin="37,124,0,0" Height="30" VerticalAlignment="Top"  KeyDown="OnKeyDownHandler" HorizontalAlignment="Left" Width="287"/>
        <DataGrid  x:Name="dataSoli" ItemsSource="{Binding}" AutoGenerateColumns="False" AlternatingRowBackground="#FFEA4A4A" AlternationCount="2" Margin="0,201,89,93" HorizontalAlignment="Right" Width="494" >
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" MinWidth="70" Header="Código"  Binding="{Binding COD_CLIENTE}"/>
                <DataGridTextColumn MinWidth="140" IsReadOnly="True" Header="Nombre de Material"  Binding="{Binding NOMBRE_CLIENTE}"/>
                <DataGridTextColumn MinWidth="140" IsReadOnly="True" Header="Cantidad Solicitada"  Binding="{Binding APELLIDO_CLIENTE}"/>
                <DataGridTextColumn MinWidth="140" IsReadOnly="True" Header="Presentación"  Binding="{Binding EMPRESA_CLIENTE}"/>

            </DataGrid.Columns>
        </DataGrid>
        <DataGrid  x:Name="dataMateriales" ItemsSource="{Binding}" AutoGenerateColumns="False" AlternatingRowBackground="#FFEA4A4A" AlternationCount="2" Margin="37,183,0,98" HorizontalAlignment="Left" Width="402" >
            <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" MinWidth="70" Header="Código"  Binding="{Binding COD_MATERIAL}"/>
                <DataGridTextColumn MinWidth="110" IsReadOnly="True" Header="Nombre Material"  Binding="{Binding NOMBRE_MATERIAL}"/>
                <DataGridTextColumn MinWidth="110" IsReadOnly="True" Header="Cantidad en Existencia"  Binding="{Binding EXISTENCIA_MATERIAL}"/>
                <DataGridTextColumn MinWidth="100" IsReadOnly="True" Header="Presentación"  Binding="{Binding UNIDAD_MEDIDA_MATERIAL}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnVolver" Content="Volver" Margin="37,0,0,25" Background="#FFC91029" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFF7F7F7" HorizontalAlignment="Left" Width="101" Height="41" VerticalAlignment="Bottom" Click="BtnVolver_Click"/>
        <Button x:Name="btnSeleccionar" Content="Seleccionar>>" Margin="458,0,0,256" Background="#FFC91029" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFF7F7F7" HorizontalAlignment="Left" Width="110" Height="36" VerticalAlignment="Bottom" Click="BtnSeleccionar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" Margin="734,0,0,27" Background="#FFC91029" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFF7F7F7" HorizontalAlignment="Left" Width="110" Height="36" VerticalAlignment="Bottom"/>
        <Button x:Name="btnSolicitar" Content="Solicitar" Margin="972,0,0,27" Background="#FFC91029" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFF7F7F7" HorizontalAlignment="Left" Width="110" Height="36" VerticalAlignment="Bottom" Click="BtnSolicitar_Click"/>
        <Label Content="Código:" HorizontalAlignment="Left" Margin="619,124,0,0" VerticalAlignment="Top"/>
        <Label Content="Nombre Material:" HorizontalAlignment="Left" Margin="816,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Cantidad a Solicitar:" HorizontalAlignment="Left" Margin="619,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Presentación:" HorizontalAlignment="Left" Margin="816,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.2,0.5"/>
        <TextBox x:Name="txtCodigo" IsEnabled="False"  HorizontalAlignment="Left" Height="24" Margin="675,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNombre" IsEnabled="True"  HorizontalAlignment="Left" Height="24" Margin="919,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163"/>
        <TextBox x:Name="txtCantidad" HorizontalAlignment="Left" Height="22" Margin="734,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61"/>
        <TextBox x:Name="txtPresentacion" IsEnabled="True" HorizontalAlignment="Left" Height="22" Margin="919,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163"/>



    </Grid>
</Window>
